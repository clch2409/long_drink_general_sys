<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPasswordsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:background="@drawable/fondo_register">

        <ImageView
            android:id="@+id/back_register"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/light_red"/>

        <ImageView
            android:id="@+id/image_register"
            android:layout_width="150dp"
            android:layout_height="150sp"
            android:background="@drawable/logo_blanco"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50sp"/>

        <TextView
            android:id="@+id/register_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_pass_title"
            android:layout_below="@id/image_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:padding="15sp"
            android:background="@color/nomuch_white"
            android:hint="@string/register_pass_title"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_shield_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/light_blue"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/txtPassRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:padding="15sp"
            android:background="@color/nomuch_white"
            android:hint="@string/register_pass_repeat"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_shield_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/light_blue"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPassRepeat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/register_button"
            android:backgroundTint="@color/dark_blue"/>

        <TextView
            android:id="@+id/back_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/button_register"
            android:layout_centerHorizontal="true"
            android:text="@string/register_back_login"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>