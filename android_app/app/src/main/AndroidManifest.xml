<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission
        android:name="android.permission.INTERNET"
        tools:ignore="ManifestOrder" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android_app"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".PaymentsActivity"
            android:exported="false" />
        <activity
            android:name=".ChangeCredentialsActivity"
            android:exported="true"
            android:theme="@style/Theme.Android_app" />
        <activity
            android:name=".RecoveryActivity"
            android:exported="true"
            android:label="@string/title_activity_recovery"
            android:theme="@style/Theme.Android_app" />
        <activity
            android:name=".InscriptionActivity"
            android:exported="true"
            android:theme="@style/Theme.Android_app" />
        <activity
            android:name=".CourseDescriptionActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".RegisterPasswordsActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>